extends layout

block content
  h1= title
  - const results1 = []
  a(class="btn btn-success" href="/icecream/create") Create
  div(class="container mt-4")
    div(class="row")

      each icecream, index in results
        - let destination = `dispatch("/icecream/update?id=${icecream._id}")`
        div(class="col-sm-4 mb-3 icecream-card")
          div(class="card")
            div(class="card-body")
              h3(class="card-text") #{icecream.flavor}
              p(class="card-text") Type: #{icecream.type}
              p(class="card-text") Rating: #{icecream.rating}
              button.btn(class="btn-primary ml-1", onclick=destination) Update
              button.btn(class="btn-primary ml-1", onclick=`deleteIcecream('${icecream._id}')`) delete
              button.btn(class="btn-primary ml-1", onclick=`detailIcecream('${icecream._id}')`) detail

  script.
    function dispatch(path){
      window.location.href = path;
    }
    function deleteIcecream(id) {
      window.location.href='/icecream/delete/?id='+id;
    }

    function detailIcecream(id) {
      window.location.href='/icecream/detail/?id='+id;
    }
